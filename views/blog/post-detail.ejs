<%- include('../includes/head.ejs') %>

  </head>
  <body>
      <main>
        <%- include('../includes/nav.ejs') %>

        <div class="blog_section">

    <h3><%= post.title %></h3>
   
    <p><%= post.body %></p>
    <p><%= post.author.name %></p>
    <button><a href="/post/<%=post._id %>?comment=true">Comments</a></button>
    <button><a href="/like-post/<%= post._id %>?like=true">Like Post</a> <span>
      <% if(post.getLikes()){ %>
      <%= post.getLikes() %> 
      <%}%>
    </span> </button>
    <% if(comments.loadComments) {%>
        <form action="/add-comment" method="POST"> 
          <input type="text" name="comment" style="width:80%;background-color:rgb(250, 240, 240);height: 20px;padding:5px; margin-top: 10px;" placeholder="write a comment" />
          <input type="hidden" name="postId" value="<%= post._id %>"/>
          <button type="submit">Comment</button>       
        </form>
        <% if(comments.commentsData.length != 0) { %>
        <% comments.commentsData.forEach(function(comment){ %>
          <p><%= comment.commentId.text %></p>
         
      <% }) %>
      <%}%>

        <%}%>
    </div>
    <sidebar class="sidebar">
        <div>
            <h2>Sidebar</h2> 
          </div>
      </sidebar>
    </main>
  </body>
</html>
